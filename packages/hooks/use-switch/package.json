{
  "name": "@raddix/switch",
  "description": "Is a hook that provides the behavior and accessibility of a switch.",
  "version": "1.1.1",
  "license": "MIT",
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "directory": "packages/primitives/switch",
    "url": "https://github.com/gdvu/raddix.git"
  },
  "keywords": [
    "raddix",
    "switch",
    "react-switch",
    "accessibility"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "eslint \"{src,tests}/*.{ts,tsx,css}\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "build": "tsup src --dts",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "@raddix/use-keyboard": "workspace:*",
    "@raddix/use-toggle": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
